<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    tools:context="com.dietmanager.dietician.activity.OrderRequestDetailActivity">

    <LinearLayout
        android:id="@+id/llToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/activity_vertical_margin_half"
            android:src="@drawable/ic_left_arrow"
            android:tint="@color/black" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/activity_vertical_margin_half"
            android:text="@string/live_task"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llToolbar"
        android:layout_marginBottom="@dimen/_58sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@color/colorAccent"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunito_bold"
                        android:text="@string/time_left"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="30 secs"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/user_img"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/shimmer_bg" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_semibold"
                                android:textColor="@color/colorTextBlack"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/tv_user_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:paddingTop="@dimen/_4sdp"
                                android:singleLine="true"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/_12sdp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/call_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@color/colorOrange"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:src="@drawable/ic_call_24px"/>

                            <ImageView
                                android:id="@+id/navigation_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:tint="@color/colorOrange"

                                android:src="@drawable/ic_navigation_24px"/>
                        </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:background="@color/light_grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_14sdp">

                    <TextView
                        android:id="@+id/tv_order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunito_bold"
                        android:text="#111"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tvOrderTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="8:30 PM"
                        android:textColor="@color/colorSecondaryText" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@color/light_grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingBottom="@dimen/_2sdp">

                            <TextView
                                android:id="@+id/food_item_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunito_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:id="@+id/food_item_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:fontFamily="@font/nunito_semibold"
                                android:gravity="end"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_medium" />

                        </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ingredients_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_ingredients_invoice"
                        android:orientation="vertical" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin_half"
                        android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                        android:background="@color/light_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/item_total"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:id="@+id/item_total"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:fontFamily="@font/nunito_semibold"
                                android:gravity="end"
                                android:text="$0"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/text_medium" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/cgst"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:id="@+id/tv_cgst"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:fontFamily="@font/nunito_semibold"
                                android:gravity="end"
                                android:text="$0"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/text_medium" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/sgst"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:id="@+id/tv_sgst"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:fontFamily="@font/nunito_semibold"
                                android:gravity="end"
                                android:text="$0"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/text_medium" />

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="@string/service_tax"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/text_medium" />

                        <TextView
                            android:id="@+id/service_tax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/nunito_semibold"
                            android:gravity="end"
                            android:text="$0"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/text_medium" />
                    </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lay_deliverycharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/delivery_charges"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:id="@+id/delivery_charges"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:fontFamily="@font/nunito_semibold"
                                android:gravity="end"
                                android:text="$0"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/text_medium" />

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/activity_vertical_margin_half"
                            android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                            android:background="@color/light_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_22sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/total"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_semibold"
                                android:gravity="end"
                                android:text="0"
                                android:layout_marginStart="@dimen/_42sdp"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="@dimen/text_medium" />

                        </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@color/light_grey"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/llAssignChef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/assign_chef_btn"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:layout_weight="1"
            android:text="@string/assign_chef"
            android:textColor="@color/colorTextWhite"
            android:textAllCaps="true"
            android:textSize="@dimen/text_medium" />

        <Button
            android:id="@+id/cancel_btn"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/text_medium" />


    </LinearLayout>

</RelativeLayout>
