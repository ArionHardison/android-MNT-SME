<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_grey"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin_half"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin_half">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/sub_total"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/sub_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="end"
            android:text="$56"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/service_tax"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/service_tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="end"
            android:text="0"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/promocodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/discount"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/promocode_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="end"
            android:text="$56"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/shop_discount"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="end"
            android:text="$56"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/cgst"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/tv_cgst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="end"
            android:text="$56"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/sgst"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/tv_sgst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="end"
            android:text="$56"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/delivery_charges"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/delivery_charges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="end"
            android:text="$56"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/activity_vertical_margin_half"
        android:layout_marginBottom="@dimen/activity_vertical_margin_half"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/total"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="end"
            android:text="$56"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>


</LinearLayout>