<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_12sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp">

                    <ImageView
                        android:id="@+id/dish_img"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:contentDescription="@string/restaurant"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo_app" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#fafafa"
                android:padding="@dimen/_2sdp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:text="Jennifer William"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_small" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:text="13 mints ago"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                    <TextView
                        android:id="@+id/halal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:padding="@dimen/_2sdp"
                        android:text="@string/halal"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />



                </LinearLayout>
            </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_9sdp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:background="@drawable/edit_text_rounded_corner_bg"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small"
        android:textAllCaps="false"
        android:text="Comment"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="@drawable/edit_text_rounded_corner_bg"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small"
        android:textAllCaps="false"
        android:text="Share"/>
</LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />
    </androidx.cardview.widget.CardView>
</LinearLayout>